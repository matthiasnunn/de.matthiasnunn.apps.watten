<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:propertyName="translationY"
        android:valueType="floatType"
        android:duration="0"
        android:valueFrom="0"
        android:valueTo="@dimen/translation_bottom" />

    <objectAnimator
        android:propertyName="rotationX"
        android:duration="0"
        android:valueFrom="0"
        android:valueTo="-90" />

    <objectAnimator
        android:propertyName="rotationX"
        android:startOffset="@integer/offset_helper"
        android:duration="@integer/rotation_duration"
        android:valueFrom="-90"
        android:valueTo="0" />

    <objectAnimator
        android:propertyName="translationY"
        android:valueType="floatType"
        android:startOffset="@integer/offset_helper"
        android:duration="@integer/translation_duration"
        android:valueFrom="@dimen/translation_bottom"
        android:valueTo="0" />

    <!-- waiting -->
    <objectAnimator
        android:propertyName="translationY"
        android:valueType="floatType"
        android:startOffset="@integer/second_offset_player1"
        android:duration="0"
        android:valueFrom="0"
        android:valueTo="0" />

</set>